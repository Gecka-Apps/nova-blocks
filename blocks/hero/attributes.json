{
  "attributes": {
    "contentPadding": {
      "type": "string",
      "default": "medium"
    },
    "contentPaddingCustom":  {
      "type": "number",
      "default": 50
    },
    "contentWidth":  {
      "type": "string",
      "default": "full"
    },
    "contentWidthCustom":  {
      "type": "number",
      "default": 100
    },

    "horizontalAlignment": {
      "type": "string",
      "default": "center"
    },
    "verticalAlignment": {
      "type": "string",
      "default": "center"
    },

    "enableParallax": {
      "type": "boolean",
      "default": true
    },
    "parallaxAmount": {
      "type": "string",
      "default": "50"
    },
    "parallaxCustomAmount": {
      "type": "number",
      "default": 50
    },

    "enableMinHeight": {
      "type": "boolean",
      "default": true
    },
    "minHeight": {
      "type": "number",
      "default": 50,
      "source": "meta",
      "meta": "nova_hero_minimum_height"
    },
    "applyMinimumHeight": {
      "type": "string",
      "default": "first",
      "source": "meta",
      "meta": "nova_hero_apply_minimum_height"
    },
    "applyMinimumHeightBlock": {
      "type": "boolean",
      "default": false
    },
    "scrollIndicator": {
      "type": "boolean",
      "default": true,
      "source": "meta",
      "meta": "nova_hero_scroll_indicator"
    },
    "scrollIndicatorBlock": {
      "type": "boolean",
      "default": false
    },
    "contentColor": {
      "type": "string",
      "default": "#FFF"
    },
    "overlayFilterStyle": {
      "type": "string",
      "default": "dark"
    },
    "overlayFilterStrength": {
      "type": "number",
      "default": 30
    },
    "images": {
      "type": "array",
      "default": []
    }
  }
}